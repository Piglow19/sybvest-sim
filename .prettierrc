{
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing:": true,
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/db/(.*)$",
    "^@/lib/(.*)$",
    "^@/config/(.*)$",
    "^@/utils/(.*)$",
    "^@/email/(.*)$",
    "^@/components/(.*)$", 
    "^@/contexts/(.*)$",
    "^@/hooks/(.*)$",
    "^@/containers/(.*)$",
    "^@/(.*)$",
    "^[./]"
  ],
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
